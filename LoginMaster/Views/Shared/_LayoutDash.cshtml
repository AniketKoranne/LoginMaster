<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
<style>
    /* Sidebar styles */
    .sidebar {
        height: 100%;
        width: 200px;
        position: fixed;
        top: 0;
        left: 0;
        background-color: white;
        padding-top: 20px;
    }

        .sidebar a {
            display: block;
            padding: 10px;
            text-decoration: none;
            color: black;
        }

            .sidebar a.active {
                background-color: #337ab7;
                color: white;
            }

            .sidebar a:hover:not(.active) {
                background-color: #337ab7;
                color: white;
            }
    /* Top Navbar styles */
    .navbar-top {
        position: fixed;
        top: 0;
        right: 0;
        width: calc(100% - 200px); /* Width minus sidebar width */
        background-color: transparent; /*#333;*/
        color: white;
        padding: 10px;
        z-index: 1000; /* Ensure top placement */
    }

        .navbar-top a {
            color: black;
            text-decoration: none;
            margin-left: 10px;
        }

        .navbar-top .navbar-text {
            margin-right: 10px;
        }

    .search-form {
        display: inline-block;
        margin-right: 20px;
    }

    .txtsearch {
        border-radius: 20rem;
    }
    /* Base styles for profile icons */
    .user-profile,
    .logout-profile,
    .settings-profile {
        width: 30px;
        height: 30px;
        background-color: #337ab7; /* Base color from the logo */
        border-radius: 50%;
        transition: background-color 0.3s ease-in-out;
    }

        /* Hover effect for profile icons */
        .user-profile:hover,
        .logout-profile:hover,
        .settings-profile:hover {
            background-color: deepskyblue; /* Hover color from the logo */
        }

    </style>
</head>
<body>
    <div class="row">
        <div class="col-md-2">
            <!-- Sidebar -->
            <div class="sidebar">
                <img src="~/img/LH1.png" style="width: 95%; height: 10%; cursor: pointer;" alt="Brand Name" onclick="location.href='@Url.Action("Index", "Home", new { area = "" })';" />

                @*<img src="~/img/LH1.png" width="95%" height="10%" />*@
                <a class="active" href="#home">Home</a>
                <a href="#news">News</a>
                <a href="#contact">Contact</a>
                <!-- Dynamically generated list items -->
                @if (ViewBag.DynamicItems != null)
                {
                    foreach (var item in ViewBag.DynamicItems)
                    {
                        <a href="@item.Url">@item.Title</a>
                    }
                }
            </div>
        </div>
        <div class="col-md-10">
            <!-- Top Navbar -->
            <div class="navbar-top">
                <div class="container">
                    <div class="navbar-header col-md-12">
                        <div class="row">
                            <div class="col-md-4">
                                
                                <!-- Welcome message for the user -->
                                <a href="#" class="navbar-brand">Welcome, User!</a>
                            </div>
                            <div class="col-md-4">
                                <!-- Search form -->                                
                                    <input class="form-control txtsearch" type="text" placeholder="Search here" name="search">                                
                            </div>
                            <div class="col-md-4">
                                <div class="row">
                                    <!-- User Logout and Settings profile icon -->
                                    <div class="col-md-1">
                                        <div class="user-profile">
                                            <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
                                                <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0" />
                                                <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1" />
                                            </svg>
                                        </div>
                                    </div>
                                    <div class="col-md-1">
                                        <div class="logout-profile" id="logoutButton">
                                            <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-box-arrow-right-circle" viewBox="0 0 16 16">
                                                <path d="M8 0a8 8 0 1 0 0 16A8 8 0 0 0 8 0zM8 1a7 7 0 1 1 0 14A7 7 0 0 1 8 1z" />
                                                <path fill-rule="evenodd" d="M10.5 7.5a.5.5 0 0 1 .5.5v2a1.5 1.5 0 0 1-1.5 1.5h-5A1.5 1.5 0 0 1 3 10v-4A1.5 1.5 0 0 1 4.5 4.5h5A1.5 1.5 0 0 1 11 6v2a.5.5 0 0 1-.5.5zm-.5-.5a.5.5 0 0 0-.5-.5v-2a.5.5 0 0 0-.5-.5h-5a.5.5 0 0 0-.5.5v5a.5.5 0 0 0 .5.5h5a.5.5 0 0 0 .5-.5v-2a.5.5 0 0 0-.5-.5z" />
                                                <path fill-rule="evenodd" d="M12.854 8.354a.5.5 0 0 0 0-.708l-2-2a.5.5 0 1 0-.708.708L11.293 7.5H6.5a.5.5 0 0 0 0 1h4.793l-1.147 1.146a.5.5 0 1 0 .708.708z" />
                                            </svg>

                                        </div>
                                    </div>
                                    <div class="col-md-1">
                                        <div class="settings-profile">
                                            <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-gear-fill" viewBox="0 0 16 16">
                                                <path d="M9.405 1.05c-.413-1.4-2.397-1.4-2.81 0l-.1.34a1.464 1.464 0 0 1-2.105.872l-.31-.17c-1.283-.698-2.686.705-1.987 1.987l.169.311c.446.82.023 1.841-.872 2.105l-.34.1c-1.4.413-1.4 2.397 0 2.81l.34.1a1.464 1.464 0 0 1 .872 2.105l-.17.31c-.698 1.283.705 2.686 1.987 1.987l.311-.169a1.464 1.464 0 0 1 2.105.872l.1.34c.413 1.4 2.397 1.4 2.81 0l.1-.34a1.464 1.464 0 0 1 2.105-.872l.31.17c1.283.698 2.686-.705 1.987-1.987l-.169-.311a1.464 1.464 0 0 1 .872-2.105l.34-.1c1.4-.413 1.4-2.397 0-2.81l-.34-.1a1.464 1.464 0 0 1-.872-2.105l.17-.31c.698-1.283-.705-2.686-1.987-1.987l-.311.169a1.464 1.464 0 0 1-2.105-.872zM8 10.93a2.929 2.929 0 1 1 0-5.86 2.929 2.929 0 0 1 0 5.858z" />
                                            </svg>
                                        </div>
                                    </div>
                                </div>                                                                                                                               
                            </div>
                        </div>
                        
                        
                        
                    </div>
                    @*<ul class="nav nav-pills nav-fill gap-2 p-1 small rounded-5 shadow-sm" id="pillNav2" role="tablist" style="--bs-nav-link-color: var(--bs-danger); --bs-nav-pills-link-active-color: var(--bs-primary); --bs-nav-pills-link-active-bg: var(--bs-success;">
                        <li class="nav-item nav-link rounded-5" role="presentation">@Html.ActionLink("About", "About", "Home")</li>
                        <li class="nav-item nav-link rounded-5" role="presentation">@Html.ActionLink("Contact", "Contact", "Home")</li>
                    </ul>*@
                </div>
            </div>

            <!-- Content Area -->
            <div class="container body-content" style="margin-top: 60px;">
                @RenderBody()
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
                </footer>
            </div>

            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")
            @RenderSection("scripts", required: false)
        </div>
    </div>
</body>
</html>
